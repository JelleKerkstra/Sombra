@using Sombra.Web.Infrastructure.Extensions
@model Sombra.Web.ViewModels.Shared.CharityActionsViewModel

@if (Model.CharityActions != null)
{
    <h3 class="title">Lopende acties</h3>
    <div class="slider-container">
        <div class="main-carousel">
            @foreach (var charityAction in Model.CharityActions)
            {
                @await Html.PartialAsync("_CharityActionItem", charityAction)
            }
        </div>
        <div class="button button--previous"></div>
        <div class="button button--next"></div>
    </div>

    <div class="action-buttons">
        <div class="all-actions colored-button">
            <a href="@Html.BaseUrl(Url.Action("CharityActions", "Home"))"></a>
            <span class="monster-700">Bekijk alle acties</span>
        </div>
        <div class="make-actions blank-button">
            <a href="#"></a>
            <span class="monster-700">Start een actie</span>
        </div>
    </div>
}