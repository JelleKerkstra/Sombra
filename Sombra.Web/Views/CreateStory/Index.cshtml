@{ ViewData["Title"] = "CreateStory"; }

@section Styles{
    <link rel="stylesheet" href="~/css/createstory/createstory.css" />
    <link rel="stylesheet" media="screen and (min-width: 1200px)" href="~/css/createstory/desktop.css" />
    <link href='https://fonts.googleapis.com/css?family=Kalam' rel='stylesheet'>
}
@section Scripts {
    <script src="~/js/create-story.js"></script>
}
<form action="" id="">
    @*Background Picture*@
    <div class="header-image" id="header-image" style="background-color: #d8d8d8"></div>
    @*Background Picture frame*@
    <div id="add-header-image">
        @*Add image*@
        <input class="image-import" type="file" id="file-header" accept="image/*" />
        <div class="mytext-container">
            <label for="file-header">Voeg hier een omslagfoto toe</label>
        </div>
        <div class="add-button"></div>
        @*Show live page*@
        <div class="view-text"><span>Voorvertoning</span></div><div class="icon-show"></div>
    </div>

    @*Main container*@
    <div class="story-container container">
        @*Profile picture*@
        <div class="story-logo">
            <div class="story-logo-container">
                <div class="shape-frame" id="shape-frame" style="background-image:url(../Assets/icons/Icon_profiel_make.svg)">
                    <input class="image-import" type="file" id="file-profile-picute" accept="image/*" />
                    <label for="file-profile-picute"></label>
                </div>
            </div>
            @*Name*@
            <div class="profile-name-container"><input class="profile-name" type="text" id="fname" name="firstname" placeholder="  Vul hier je naam in"></div>
        </div>
        @*title & story*@
        <div id="about">
            <div class="row about-text">
                <div class="title-container"><input class="title" type="text" id="fname" name="firstname" placeholder="  Titel van jouw verhaal"></div>
                <div class="storypart-1-container"><textarea class="story" type="text" id="fname" name="firstname" placeholder="  Typ hier de inleiding van jouw verhaal"></textarea></div>
                <div class="story-image" id="story-image">
                    <input class="image-import" type="file" id="file" accept="image/*" />
                    <label for="file">Klik hier om een foto of video te uploaden</label>
                    <div class="image-icon-box"></div>
                </div>
                <div class="storypart-2-container"><textarea class="story" type="text" id="fname" name="storypart-2-container" placeholder="  Typ hier de kern van jouw verhaal"></textarea></div>
                <div class="quote-container"><input class="quote" type="text" id="quote" name="quote" placeholder="  Heb je een leuke quote? Schrijf deze dan hier."></div>
                <div class="storypart-3-container"><textarea class="story" type="text" id="fname" name="storypart-3-container" placeholder="  Typ hier het slot van jouw verhaal"></textarea></div>
                <div class="container">
                    <div class="story-image-2" id="story-image-2">
                        <input class="image-import" type="file" id="file-2" accept="image/*" />
                        <label for="file-2">Klik hier om een foto of video te uploaden</label>
                        <div class="image-icon-box"></div>
                    </div>
                    <div class="story-image-3" id="story-image-3">
                        <input class="image-import" type="file" id="file-3" accept="image/*" />
                        <label for="file-3">Klik hier om een foto of video te uploaden</label>
                        <div class="image-icon-box"></div>
                    </div>

                </div>
            </div>
        </div>

        <label class="add-more-label">Voeg meer foto’s toe  <img class="add-more-button" src="../Assets/icons/Icon_plus.svg"></label>

        @*TODO link all input to model*@
        <button href="#" class="send-button"><p>Verstuur</p></button>
    </div>
</form>
        
