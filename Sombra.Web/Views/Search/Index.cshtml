@using Sombra.Core.Enums
@using Sombra.Core.Extensions
@{ ViewData["Title"] = "Goede doelen"; }
@section Styles
    {
    <link rel="stylesheet" href="~/css/search/search.css" />
}

@section Scripts
{
    <script>
        $('#filter').on('change', function(event) {
            var selectedOption = $(event.target).find(':selected');
            if (!selectedOption.val()) return;
            if ($('#selected-categories').find(`.selected-category[data-id="${selectedOption.val()}"]`).length) return;
            $('#selected-categories').append($('#selected-category-display').html().replace('[categoryId]', selectedOption.val()).replace('[categoryName]', selectedOption.text()));
        });
    </script>
}

<div id="filter">
    <a href="#" class="signin-charity source-600">Een goed doel aanmelden</a>
    <h2 class="monster-200 filter-title">@ViewData["Title"]</h2>

    <div class="form-holders">
        <form id="Categorieën" class="filter-form" action="filter-charityActions">
            <input class="filter-input" type="text" placeholder="Zoeken..." name="search-input" id="search-input">
            <button class="submit-button monster-300" type="button"><i class="fa fa-search"></i></button>

            <div class="custom-select monster-300">
                <select class="monster-300" form="Categorieën">
                    <option class="monster-300 option" value="" hidden>Categorieën</option>
                    @foreach (var category in typeof(Category).GetFlagValues<Category>().Where(v => (int)v != 0))
                    {
                        <option class="monster-300 option" value="@((int) category)">@category.GetDisplayName()</option>
                    }
                </select>
                <i class="fas fa-chevron-down"></i>
            </div>
        </form>
    </div>
</div>

