@{ ViewData["Title"] = "Aanmelden stichting of goed doel"; } 
@section Styles{
<link rel="stylesheet" href="~/css/charitySignUp/charitySignUp.css" /> 
} 
@section Scripts {
<script src="~/js/flow-3/charity-sign-up.js"></script>
}

<div id="background-frame"></div>

<div class="form-signUpCharity">
    <form id="sign-up-charity">
        <section class="section-01">
            <div class="signUp-progress">
                <div class="orange-ball .first-section"></div>
                <div class="grey-ball"></div>
            </div>
            <div class="title-holder">
                <div class="signUp-step">
                    <p>1</p>
                </div>
                <h3 class="signUp-title monster-400">Aanmelden van...</h3>
            </div>

            <a class="closing"><span class="signUp-close"></span><span class="signUp-close"></span></a>

             <div class="big-radio-button">
                <div class="radio-holder">
                    <input type="radio" id="charity" name="select" value="2" required>
                    <label for="charity" class="validatable">
                    <h2 class="source-600 radio-input-tag"> een goed doel</h2>
                </label>
                </div>

                <div class="radio-holder">
                    <input type="radio" id="stichting" name="select" value="2">
                    <label for="stichting" class="validatable">
                    <h2 class="source-600 radio-input-tag"> een stichting</h2>
                </label>
                </div>
            </div>

            <div class="big-distance standard-input ">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="name-charity" type="text" placeholder="Naam van het goed doel">
            </div>

            <div class="jquery-select select-category">
                <div class="chevron"></div>
                <select id="select-your-category" name="select-category" form="sign-up-charity"></select>
            </div>

            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="kvk-number" type="text" placeholder="KvK nummer">
            </div>

            <p class="source-300 Anbi-explain">Bij ikdoneer.nu is het verplicht om ANBI geregistreerd te zijn, daarom vragen wij het KvK nummer ter controle. Het KvK- en ANBI nummer zullen zichtbaar zijn op de pagina van het goede doel.</p>

            <div id="payment-details">
                <p class="monster-700 head-partje">BETAALGEGEVENS</p>
                <div class="card-data">
                    <label class="country source-400">NL</label>
                    <input id="first-numbers" type="number" placeholder="00" required>
                      <div class="jquery-select select-bank">
                        <div class="chevron"></div>
                        <select id="select-your-bank" name="select-bank" form="sign-up-charity"></select>
                    </div>
                    <input id="last-numbers" type="number" placeholder="0000000" required>
                </div>
            </div>
            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="card-holder" type="text" placeholder="Naam van kaarthouder" required>
            </div>

            <div id="contact-data">
                <lable class="monster-700 head-partje">CONTACTGEGEVENS</lable>
            </div>
            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="name-contact" type="text" placeholder="Naam contactpersoon" required>
            </div>
            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="email" type="email" placeholder="E-mailadres" required>
            </div>
            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="password" type="password" placeholder="Wachtwoord" required>
            </div>
            <div class="standard-input">
                <div class="filled-icon"></div>
                <input class="source-400 validatable" id="password-repeat" type="password" placeholder="Wachtwoord herhalen" required>
            </div>

             <div class="next-step-holder">
                <div class="next-step">
                    <a id="next-to-section-3" class="clickable" href="#"></a>
                </div>
                <p class="error-message monster-300">Oeps er is iets mis</p>
            </div>



        </section>
        <section class="section-02"></section>
    </form>
</div>